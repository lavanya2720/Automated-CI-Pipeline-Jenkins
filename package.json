{
  "name": "automated-ci-pipeline-jenkins",
  "version": "1.0.0",
  "description": "Sample Node.js app to demonstrate Jenkins CI pipeline",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "build": "rm -rf build && mkdir -p build && cp -r src package.json build/ || true",
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "lint": "eslint . || true"
  },
  "jest-junit": {
    "outputDirectory": ".",
    "outputName": "junit.xml"
  },
  "author": "you",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-junit": "^13.0.0",
    "supertest": "^7.1.4"
  }
}
